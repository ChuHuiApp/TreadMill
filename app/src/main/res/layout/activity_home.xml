<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bk_pop"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_btn_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/btn_home_setting_1" />

        <ImageView
            android:id="@+id/home_btn_language"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/btn_home_language_us_1" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/home_img_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/img_virtual_reality_page_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center">

        <com.sunrise.treadmill.views.LogoImageView
            android:id="@+id/home_btn_logo"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:clickable="true"
            android:src="@mipmap/btn_ergo" />

    </LinearLayout>

</LinearLayout>
