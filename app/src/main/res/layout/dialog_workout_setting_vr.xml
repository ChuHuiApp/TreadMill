<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_workout_vr_img"
        android:layout_width="220dp"
        android:layout_height="162dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_program_virtual_01_4" />


    <com.sunrise.treadmill.views.MyKeyBoardView
        android:id="@+id/dialog_workout_vr_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_workout_vr_edit_time"
            android:layout_width="225dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_virtual_time_1"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:textColor="@color/workout_mode_white"
            android:textSize="80px" />

        <include layout="@layout/workout_edit_start_4" />
    </LinearLayout>
</LinearLayout>
