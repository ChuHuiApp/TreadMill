<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory1_unit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/unit"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <RadioGroup
            android:id="@+id/factory1_unit_radio"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center|left"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:background="@drawable/btn_factory_1_imperial"
                android:button="@null" />

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_factory_1_metrial"
                android:button="@null" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory1_type"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/type"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <RadioGroup
            android:id="@+id/factory1_type_radio"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center|left"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:background="@drawable/btn_factory_1_bike"
                android:button="@null" />

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_factory_1_recumbent"
                android:button="@null" />

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_factory_1_elliptical"
                android:button="@null" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>