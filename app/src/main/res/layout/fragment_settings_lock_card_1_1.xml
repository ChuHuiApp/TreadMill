<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_lock_fragment_card_1_1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/settings_card4_1_1_time"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="16dp"
        android:gravity="center|left"
        android:text="@string/time"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/settings_card4_1_1_time_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/settings_card4_1_1_time"
        app:layout_constraintRight_toLeftOf="@+id/settings_card4_1_1_time_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_card4_1_1_time_unit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:text="@string/unit_hr"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_card4_1_1_remaining_time"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="16dp"
        android:gravity="center|left"
        android:text="@string/remaining_time"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_1_1_time" />

    <TextView
        android:id="@+id/settings_card4_1_1_remaining_time_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/settings_card4_1_1_remaining_time"
        app:layout_constraintRight_toLeftOf="@+id/settings_card4_1_1_remaining_time_unit"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_1_1_time_value" />

    <TextView
        android:id="@+id/settings_card4_1_1_remaining_time_unit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:text="@string/unit_min"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_1_1_time_unit" />


    <ImageView
        android:id="@+id/settings_card4_1_1_reset"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
