<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/workout_edit_start_hint_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:text="@string/workout_mode_hint_b"
        android:textColor="@color/workout_mode_white"
        android:textSize="14pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/workout_mode_next_2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_edit_start_hint_2"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/workout_mode_back_2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_factory_2_back"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_edit_start_hint_2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/workout_mode_start_2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_edit_start_hint_2"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
