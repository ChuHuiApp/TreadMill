        <TextView
            android:id="@+id/workout_running_media_screen_mirroring_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_screen"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_twitter_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_screen_mirroring" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/workout_running_media_ctrl_1"
        android:layout_width="50dp"
        android:layout_height="158dp"
        android:background="@mipmap/btn_sportmode_media_1" />
</FrameLayout>
