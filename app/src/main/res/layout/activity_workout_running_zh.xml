<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bk_4"
    android:orientation="vertical">

    <include layout="@layout/activity_workout_running_head" />

    <RelativeLayout
        android:id="@+id/workout_running_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/workout_running_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/workout_running_rpm_img"
                android:layout_width="216dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/img_sportmode_rpm_11" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="66dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_sportmode_profile_level_calibration_2" />

                <com.sunrise.treadmill.views.LevelView
                    android:id="@+id/workout_running_level_view"
                    android:layout_width="200dp"
                    android:layout_height="86dp"
                    android:background="@mipmap/img_sportmode_profile_level_1" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/workout_running_media_layout"
            android:layout_width="40dp"
            android:layout_height="127dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/workout_running_media_1"
                android:visibility="invisible"
                android:layout_width="247dp"
                android:layout_height="127dp"
                android:background="@mipmap/btn_sportmode_media_3"/>
            <ImageView
                android:id="@+id/workout_running_media_2"
                android:layout_width="40dp"
                android:layout_height="127dp"
                android:background="@mipmap/btn_sportmode_media_1"/>
        </FrameLayout>

    </RelativeLayout>

    <include layout="@layout/activity_workout_running_bottom" />

</LinearLayout>
