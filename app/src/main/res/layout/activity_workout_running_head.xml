<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/img_sportmode_top_bar"
    android:orientation="horizontal">

    <View
        android:layout_width="36dp"
        android:layout_height="0dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workout_running_head_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/level"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/distance"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_calories"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/calories"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_pulse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pulse"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_watt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/watt"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />

            <TextView
                android:id="@+id/workout_running_head_speed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/speed"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workout_running_head_level_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/workout_running_head_time_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="36px" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/workout_running_head_distance_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/workout_mode_running_white"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/workout_running_head_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="7dp"
                    android:text="@string/unit_km"
                    android:textColor="@color/workout_mode_running_head_value"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/workout_running_head_calories_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/workout_mode_running_white"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/workout_running_head_calories_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="6dp"
                    android:text="@string/unit_kcal"
                    android:textColor="@color/workout_mode_running_head_value"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/workout_running_head_pulse_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/workout_mode_running_white"
                    android:textSize="26px" />

                <ImageView
                    android:id="@+id/workout_running_head_pulse_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:src="@mipmap/img_pulse_1" />

            </LinearLayout>

            <TextView
                android:id="@+id/workout_running_head_watt_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/workout_mode_running_white"
                android:textSize="36px" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/workout_running_head_speed_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/workout_mode_running_white"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/workout_running_head_speed_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="8dp"
                    android:text="@string/unit_kph"
                    android:textColor="@color/workout_mode_running_head_value"
                    android:textSize="30px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/img_bt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/img_wifi" />

</LinearLayout>
