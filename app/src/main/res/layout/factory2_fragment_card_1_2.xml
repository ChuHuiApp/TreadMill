<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/factory2_card1_2"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory2_card1_2_ctrl_page"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/login_ctrl_page"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ToggleButton
            android:layout_width="113dp"
            android:layout_height="28dp"
            android:layout_gravity="center|right"
            android:background="@drawable/btn_factory_2_togg"
            android:gravity="center|right"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory2_card1_2_key_test"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/key_test"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/btn_factory_2_start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory2_card1_2_brake_test"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/brake_test"
            android:textColor="@color/factory_brake_test"
            android:textSize="42px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory2_card1_2_level"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/level"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/factory2_card1_2_level_value"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/img_number_frame_1"
            android:gravity="center"
            android:textSize="42px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/factory2_card1_2_pwm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/pwm"
            android:textColor="@color/factory_white"
            android:textSize="42px" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/factory2_card1_2_pwm_value"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/img_number_frame_1"
            android:gravity="center"
            android:textSize="42px" />

    </LinearLayout>
</LinearLayout>
