<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/workout_mode_back_3"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/btn_factory_2_back" />

    <TextView
        android:id="@+id/workout_edit_start_hint_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/workout_mode_hint_c"
        android:textColor="@color/workout_mode_white"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/workout_mode_start_3"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/btn_start" />
</LinearLayout>
