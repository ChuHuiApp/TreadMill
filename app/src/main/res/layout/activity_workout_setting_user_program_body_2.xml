<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workout_option_body2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_left"
            android:layout_width="34dp"
            android:layout_height="173dp"
            android:layout_gravity="left|top"
            android:scaleType="fitXY"
            android:src="@mipmap/img_sportmode_profile_level_calibration_2" />

        <com.sunrise.treadmill.views.LevelView
            android:id="@+id/workout_edit_level_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_sportmode_profile_level_1" />

    </LinearLayout>

    <include layout="@layout/workout_edit_start_3" />


</LinearLayout>
