<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@mipmap/tv_sportmode_level_2" />

        <View
            android:layout_width="90dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@mipmap/tv_sportmode_level_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@mipmap/img_sportmode_under_bar"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:src="@mipmap/btn_fan_1_1" />

        <ImageView
            android:id="@+id/workout_running_level_up"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/btn_workout_running_level_up" />

        <ImageView
            android:id="@+id/workout_running_stop"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_workout_running_stop" />

        <ImageView
            android:id="@+id/workout_running_level_down"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/btn_workout_running_level_down" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
