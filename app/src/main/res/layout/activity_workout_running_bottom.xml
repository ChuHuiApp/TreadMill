<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@mipmap/img_sportmode_under_bar"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="left"
        android:src="@mipmap/btn_fan_1_1" />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/btn_workout_running_level_up" />

    <View
        android:layout_width="25dp"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:src="@drawable/btn_workout_running_start" />

    <View
        android:layout_width="25dp"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/btn_workout_running_level_down" />

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
</LinearLayout>
