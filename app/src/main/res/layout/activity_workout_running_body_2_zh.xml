<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_running_body_2"
    android:layout_width="306dp"
    android:layout_height="158dp"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true"
    android:translationX="256dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/workout_running_media_1"
        android:layout_width="306dp"
        android:layout_height="158dp"
        android:background="@mipmap/btn_sportmode_media_3">

        <View
            android:id="@+id/workout_running_media_ctrl_2"
            android:layout_width="50dp"
            android:layout_height="158dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/workout_running_media_bai"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_bai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_ctrl_2"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_weibo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <ImageView
            android:id="@+id/workout_running_media_weibo"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_weibo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_bai"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_i71"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <ImageView
            android:id="@+id/workout_running_media_i71"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_i71"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_weibo"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_av"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <ImageView
            android:id="@+id/workout_running_media_av"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_av"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_i71"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_mp3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <ImageView
            android:id="@+id/workout_running_media_mp3"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_mp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_av"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <TextView
            android:id="@+id/workout_running_media_bai_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_bai"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_ctrl_2"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_weibo_name"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_bai" />

        <TextView
            android:id="@+id/workout_running_media_weibo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_weibo"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_bai_name"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_i71_name"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_weibo" />

        <TextView
            android:id="@+id/workout_running_media_i71_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_i71"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_weibo_name"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_av_name"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_i71" />

        <TextView
            android:id="@+id/workout_running_media_av_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_av"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_i71_name"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_mp3_name"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_av" />

        <TextView
            android:id="@+id/workout_running_media_mp3_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_music"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_av_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_mp3" />

        <ImageView
            android:id="@+id/workout_running_media_mp4"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_mp4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_ctrl_2"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_screen_mirroring"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_bai"
            app:layout_constraintVertical_bias="0.4" />

        <ImageView
            android:id="@+id/workout_running_media_screen_mirroring"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:src="@drawable/btn_media_screen_mirroring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_mp4"
            app:layout_constraintRight_toLeftOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_weibo"
            app:layout_constraintVertical_bias="0.4" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="51dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_screen_mirroring"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_av"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/workout_running_media_mp4_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_video"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_ctrl_2"
            app:layout_constraintRight_toLeftOf="@+id/workout_running_media_screen_mirroring_name"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_mp4" />

        <TextView
            android:id="@+id/workout_running_media_screen_mirroring_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/media_screen"
            android:textColor="@color/workout_mode_running_white"
            android:textSize="30px"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_mp4_name"
            app:layout_constraintRight_toLeftOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/workout_running_media_screen_mirroring" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintLeft_toRightOf="@+id/workout_running_media_screen_mirroring_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/workout_running_media_ctrl_1"
        android:layout_width="50dp"
        android:layout_height="158dp"
        android:background="@mipmap/btn_sportmode_media_1" />
</FrameLayout>
