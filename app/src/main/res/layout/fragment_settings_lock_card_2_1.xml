<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/settings_card4_2_customer_psw"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center|left"
        android:text="@string/customer_psw"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_card4_2_customer_psw_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:gravity="center|right"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/settings_card4_2_customer_psw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings_card4_2_reset"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_2_customer_psw" />

    <TextView
        android:id="@+id/settings_card4_2_srs_psw"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center|left"
        android:text="@string/srs_psw"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_2_reset" />

    <TextView
        android:id="@+id/settings_card4_2_srs_psw_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:textColor="@color/settings_white"
        android:textSize="42px"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/settings_card4_2_srs_psw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_card4_2_reset" />

</android.support.constraint.ConstraintLayout>
