<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/factory2_card3_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/factory2_card3_1_usb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/msg_usb_software_update"
        android:textColor="@color/factory_white"
        android:textSize="42px" />

    <ImageView
        android:id="@+id/factory2_card3_1_btn"
        android:layout_width="178dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_factory_2_up_data" />
</LinearLayout>
